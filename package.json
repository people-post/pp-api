{
    "name": "pp-api",
    "version": "1.0.0",
    "description": "APIs used by pp-app and open to third parties for alternative app developments.",
    "homepage": "https://github.com/people-post/pp-api#readme",
    "bugs": {
        "url": "https://github.com/people-post/pp-api/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/people-post/pp-api.git"
    },
    "license": "MIT",
    "author": "",
    "type": "module",
    "main": "src/index.ts",
    "types": "src/index.ts",
    "config": {
        "entry": "src/index.ts"
    },
    "scripts": {
        "build": "tsc",
        "bundle": "esbuild $npm_package_config_entry --bundle --platform=browser --outfile=bundle.js --global-name=pp",
        "package": "esbuild $npm_package_config_entry --bundle --platform=browser --outfile=bundle.js --global-name=pp --minify",
        "test": "echo \"Error: no test specified\" && exit 1",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@helia/ipns": "^9.1.3",
        "@helia/verified-fetch": "^4.0.1",
        "@libp2p/crypto": "^5.1.13",
        "@libp2p/http": "^2.0.1",
        "@libp2p/peer-id": "^6.0.4",
        "@multiformats/multiaddr": "^13.0.1",
        "@noble/post-quantum": "^0.5.2",
        "helia": "^6.0.8",
        "multiformats": "^13.4.1"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "typescript": "^5.9.3"
    }
